
<p *ngIf="loading"><em>Loading Table...</em></p>

<table class='table' *ngIf="!loading">
    <thead>
      <tr>
          <th *ngFor="let item of columns">
              <div *ngIf="item.headTemplate" [innerHTML]="interpolate(item.headTemplate, item.columnName, item.key) | safe:'html'"></div>
              <div *ngIf="!item.headTemplate">{{item.columnName}}</div>
          </th>
      </tr>
    </thead>
    <tbody>
        <tr *ngFor="let item of data">
            <td *ngFor="let column of columns" (click)="column!.onClick && onColumnClick($event, column, item[column.key])">
                <span *ngIf="column.cellTemplate" [innerHTML]="interpolate(column.cellTemplate, item[column.key], column.key) | safe:'html'"></span>
                <span *ngIf="!column.cellTemplate">{{ item[column.key] }}</span>
            </td>
        </tr>
    </tbody>
    <tfoot *ngIf="!data || data.length < 1">
        <tr>
            <td>No records found!</td>
        </tr>
    </tfoot>
  </table>